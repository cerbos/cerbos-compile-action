{
  "name": "cerbos-compile-action",
  "private": true,
  "description": "A GitHub action to compile Cerbos policies and execute policy tests",
  "type": "module",
  "packageManager": "pnpm@10.18.0+sha512.e804f889f1cecc40d572db084eec3e4881739f8dec69c0ff10d2d1beff9a4e309383ba27b5b750059d7f4c149535b6cd0d2cb1ed3aeb739239a4284a68f40cfa",
  "engines": {
    "node": "24.9.0",
    "pnpm": "10.18.0"
  },
  "scripts": {
    "all:parallel": "concurrently --group --prefix=none",
    "build": "rm -rf dist && tsc --project tsconfig.json",
    "eslint:run": "NODE_OPTIONS=--max-old-space-size=3072 eslint --max-warnings=0",
    "lint": "pnpm run all:parallel 'pnpm:lint:check:*'",
    "lint:check:eslint": "pnpm run eslint:run src tests",
    "lint:check:prettier": "prettier --check src tests",
    "lint:fix": "pnpm run lint:fix:eslint && pnpm run lint:fix:prettier",
    "lint:fix:eslint": "pnpm run eslint:run --fix src tests",
    "lint:fix:prettier": "prettier --write src tests",
    "test": "glob -c \"node --import tsx --no-warnings --test\" \"./tests/**/*.test.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerbos/cerbos-compile-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "compile"
  ],
  "author": "Cerbos",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "cerbos-actions-common": "github:cerbos/cerbos-actions-common#0.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "22.18.8",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
